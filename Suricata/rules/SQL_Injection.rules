# --------------------------------- 게시판 페이지 ----------------------------------

alert http any any -> any any (\
    msg:"SQLi - 조건문 무력화 시도('OR 1=1') (게시판 검색창)";\	
    flow:to_server,established;\
    http.uri;\
    pcre:"/(?:%27|')(?:\+|%20|\s)*or(?:\+|%20|\s)*1(?:=|%3D)1--/i";\
    classtype:web-application-attack;\
    sid:1000001;\
    rev:1;\
)

